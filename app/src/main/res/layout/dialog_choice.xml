<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bg_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="@dimen/space_48">

    <LinearLayout
        android:id="@+id/bg_noclick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialogradis"
        android:orientation="vertical"
        android:padding="@dimen/space_108">

        <LinearLayout
            android:id="@+id/noclick1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_48"
            android:paddingRight="@dimen/space_48">

            <com.daniribalbert.customfontlib.views.CustomFontTextView
                android:id="@+id/textView_titles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minWidth="@dimen/space_1000"
                android:paddingBottom="@dimen/space_64"
                android:paddingTop="@dimen/space_64"
                android:text="@string/txt_thongbao1"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="@dimen/font_66"
                app:font="Roboto_Bold" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/button_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_close" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/navigation_icon_padding_left"
            android:layout_marginRight="@dimen/navigation_icon_padding_left"
            android:background="#e6e6e6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <com.daniribalbert.customfontlib.views.CustomFontEditText
            android:id="@+id/edt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="@dimen/space_48"
            android:hint="Machine Id"
            android:imeOptions="actionSearch"
            android:layout_weight="1"
            app:font="Roboto_Light" />

            <com.daniribalbert.customfontlib.views.CustomFontButton
                android:id="@+id/btn_choice1"
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:background="#1c81fd"
                android:paddingLeft="@dimen/space_32"
                android:drawableLeft="@drawable/ic_search_small"
                app:font="Roboto_Bold" />


        </LinearLayout>

        <com.daniribalbert.customfontlib.views.CustomFontButton
            android:id="@+id/btn_choice2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_150"
            android:background="@drawable/button_login"
            android:elevation="3dp"
            android:paddingBottom="@dimen/space_19"
            android:paddingTop="@dimen/space_19"
            android:text="@string/txt_scan"
            android:textColor="@color/white"
            android:textSize="@dimen/font_56"
            app:font="Roboto_Bold" />

    </LinearLayout>

</LinearLayout>