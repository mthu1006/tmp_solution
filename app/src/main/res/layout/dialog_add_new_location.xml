        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e6e6e6" />

        <LinearLayout
            android:id="@+id/layout_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="5">

            <com.daniribalbert.customfontlib.views.CustomFontTextView
                android:id="@+id/texdenngay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.3"
                android:minWidth="@dimen/space_1000"
                android:paddingBottom="@dimen/space_64"
                android:paddingTop="@dimen/space_64"
                android:text="@string/txt_line"
                android:textSize="@dimen/font_48"
                app:font="Roboto_Medium" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spn_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.7"
                android:background="@drawable/bg_spinner"
                android:paddingLeft="@dimen/space_29">

            </android.support.v7.widget.AppCompatSpinner>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_warehouse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="5">

            <com.daniribalbert.customfontlib.views.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.3"
                android:minWidth="@dimen/space_1000"
                android:paddingBottom="@dimen/space_64"
                android:paddingTop="@dimen/space_64"
                android:text="@string/txt_warehouse"
                android:textSize="@dimen/font_48"
                app:font="Roboto_Medium" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spn_warehouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.7"
                android:background="@drawable/bg_spinner"
                android:paddingLeft="@dimen/space_29">

            </android.support.v7.widget.AppCompatSpinner>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
