<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="@drawable/heder_main"
        android:paddingTop="@dimen/space_28"
        android:gravity="center"
        android:orientation="horizontal"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <com.github.akashandroid90.imageletter.MaterialLetterIcon
            android:id="@+id/img_avatar"
            android:layout_marginRight="@dimen/space_23"
            android:layout_marginLeft="@dimen/space_66"
            android:layout_width="@dimen/space_158"
            android:layout_height="@dimen/space_158"
            android:layout_marginBottom="5dp"
            app:shape_color="@color/color_7"
            app:shape_type="circle"
            app:letter="E"
            app:letter_color="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/space_89"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="@dimen/space_23"
                android:paddingTop="@dimen/space_23"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.daniribalbert.customfontlib.views.CustomFontTextView
                    android:id="@+id/txt_employee_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_arrow_small"
                    android:layout_marginBottom="@dimen/space_1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_42"
                    app:font="Roboto_Light" />


                <com.daniribalbert.customfontlib.views.CustomFontTextView
                    android:id="@+id/txt_employee_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_arrow_small"
                    android:layout_marginBottom="@dimen/space_1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_36"
                    app:font="Roboto_Light" />


                <com.daniribalbert.customfontlib.views.CustomFontTextView
                    android:id="@+id/txt_work_base"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:drawableLeft="@drawable/ic_arrow_small"
                    android:layout_marginBottom="@dimen/space_23"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_40"
                    app:font="Roboto_Light" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="bottom"
                android:layout_weight="4"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginBottom="@dimen/space_23"
                    android:layout_marginRight="@dimen/space_23"
                    android:src="@drawable/ic_home" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
