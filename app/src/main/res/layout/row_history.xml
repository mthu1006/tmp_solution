<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerrow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/draw_round_bg"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:background="@drawable/draw_nghiphep_quanly"
        android:orientation="horizontal"
        android:padding="@dimen/space_23">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center">

                    <com.github.akashandroid90.imageletter.MaterialLetterIcon
                        android:id="@+id/imamages"
                        android:layout_width="@dimen/space_156"
                        android:layout_height="@dimen/space_156"
                        app:letter="E"
                        app:letter_color="@color/white"
                        app:shape_color="@color/colorAccent"
                        app:shape_type="circle" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/space_23"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <com.daniribalbert.customfontlib.views.CustomFontTextView
                        android:id="@+id/txt_machine_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="22170808"
                        android:textSize="@dimen/font_48"
                        app:font="Roboto_Light" />

                        <com.daniribalbert.customfontlib.views.CustomFontTextView
                            android:id="@+id/txt_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="Nguyễn Văn Kiên"
                            android:textSize="@dimen/font_48"
                            app:font="Roboto_Regular" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.daniribalbert.customfontlib.views.CustomFontTextView
                android:id="@+id/txt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="25/5/2017"
                android:textSize="@dimen/font_48"
                app:font="Roboto_Regular" />

            <com.daniribalbert.customfontlib.views.CustomFontTextView
                android:id="@+id/txt_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="Nomal"
                android:textSize="@dimen/font_48"
                app:font="Roboto_Regular" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e6e6e6" />
</LinearLayout>